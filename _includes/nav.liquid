<nav class="nav-container">
  <div id="header-title">
    <a href="/"><img class="logo-nav" src="/assets/logo-nav.png" /></a>
  </div>
  <div id="nav-desktop-container">
    <ul>
      {%- for item in menu.primary -%}
      <li>
        <a href="{{ item.url }}">
          <small>{{ item.text }}</small>
        </a>
      </li>
      {%- endfor -%}
    </ul>
  </div>
  <div id="nav-mobile-container">
    <div id="nav-mobile-menu">
      <ul>
        {%- for item in menu.primary -%}
        <li>
          <a href="{{ item.url }}">
            <small>{{ item.text }}</small>
          </a>
        </li>
        {%- endfor -%}
      </ul>
    </div>
    <a href="javascript:void(0)" class="nav-mobile-icon" onclick="a()">
      <i id="nav-icon" class="fa-solid fa-bars fa-xl"></i>
    </a>
    <script>
      function a() {
        const x = document.getElementById("nav-icon");
        const y = document.getElementById("nav-mobile-menu");
        x.classList.toggle("fa-bars");
        x.classList.toggle("fa-xmark");
        if (y.style.display === "block") {
            y.style.display = "none";
        } else {
            y.style.display = "block";
        }
      }
    </script>
  </div>
</nav>
